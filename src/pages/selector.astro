}

.angled-gradient-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 .3em #00000040;
    background-position: 0;
    color: #fff;
}
.angled-gradient-button:active {
    transform: translateY(-1px);
} 
.info {
    margin: auto;
    max-width: 800px;
    margin-top: 40px;
    padding-bottom: 20px;
    padding-left: 30px;
    padding-right: 30px;
}
.info ul {
    font-size: 20px;
}
}
</style>